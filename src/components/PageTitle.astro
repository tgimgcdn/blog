---
import Default from '@astrojs/starlight/components/PageTitle.astro';
// 检查路由ID是否为404页面（支持多语言）
const routeId = Astro.locals.starlightRoute.id || '';
const is404Page = routeId === '404' || routeId === 'en/404' || routeId.endsWith('/404');
---

{/* 如果是 404 页面，不渲染任何内容 */}
{!is404Page && <Default><slot /></Default>} 
