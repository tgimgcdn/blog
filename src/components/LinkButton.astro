import Default from '@astrojs/starlight/components/LinkButton.astro';
import { Icon } from '@astrojs/starlight/components';

interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'minimal';
  icon?: string;
  class?: string;
}

const { href, variant = 'primary', icon, class: className } = Astro.props;

// 检查是否是外部链接
function isExternalLink(url: string) {
  try {
    const urlObj = new URL(url);
    const currentDomain = Astro.url.hostname;
    return urlObj.hostname !== currentDomain && urlObj.protocol.startsWith('http');
  } catch (e) {
    return false;
  }
}

// 处理外部链接
const finalHref = isExternalLink(href) ? `/link?url=${btoa(href)}` : href;

<Default href={finalHref} variant={variant} class={className}>
  <slot />
  {icon && <Icon name={icon} />}
</Default>

