---
// 直接使用原始的PageFrame组件，保留所有原始布局
import DefaultPageFrame from '@astrojs/starlight/components/PageFrame.astro';
import BlogNavigation from './BlogNavigation.astro';

// 只判断是否是博客文章页面
const isBlogPost = Astro.url.pathname.includes('/blog/') && 
                  !Astro.url.pathname.endsWith('/blog/') && 
                  !Astro.url.pathname.includes('/tags/') && 
                  !Astro.url.pathname.includes('/authors/');
---

<DefaultPageFrame {...Astro.props}>
  <slot />
  
  <!-- 只在文章页面添加导航，不影响其他页面 -->
  {isBlogPost && <BlogNavigation />}
</DefaultPageFrame> 
