---
// 从 props 获取分类
const { category } = Astro.props;

// 从 starlightBlog 获取文章数据
const starlightBlog = Astro.locals?.starlightBlog;

// 获取所有文章并按日期排序
const posts = starlightBlog?.posts
  ?.filter(post => {
    // 如果没有指定分类，显示所有文章
    if (!category) return true;
    // 否则只显示指定分类的文章
    return post.entry?.data?.category === category;
  })
  .sort((a, b) => {
    const dateA = new Date(a.entry?.data?.pubDate || 0);
    const dateB = new Date(b.entry?.data?.pubDate || 0);
    return dateB.getTime() - dateA.getTime();
  }) || [];
---

<div class="categories-container">
  <div class="posts-list">
    {posts.map(post => (
      <div class="post-card">
        <a href={post.href} class="post-link">
          <h3 class="post-title">{post.entry?.data?.title}</h3>
          <p class="post-excerpt">{post.entry?.data?.description || ''}</p>
          <div class="post-meta">
            <time class="post-date">
              {new Date(post.entry?.data?.pubDate || 0).toLocaleDateString('zh-CN')}
            </time>
          </div>
        </a>
      </div>
    ))}
  </div>
</div>

<style>
  .categories-container {
    max-width: var(--sl-content-width);
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .posts-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .post-card {
    background: var(--sl-color-bg);
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
  }

  .post-link {
    display: block;
    padding: 1.5rem;
    text-decoration: none;
    color: var(--sl-color-text);
  }

  .post-title {
    font-size: 1.25rem;
    margin: 0 0 0.75rem;
    color: var(--sl-color-text);
  }

  .post-excerpt {
    font-size: 0.9rem;
    color: var(--sl-color-text-accent);
    margin: 0 0 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta {
    font-size: 0.8rem;
    color: var(--sl-color-gray-3);
  }

  .post-date {
    display: inline-block;
  }

  @media (max-width: 768px) {
    .posts-list {
      grid-template-columns: 1fr;
    }
  }
</style> 
