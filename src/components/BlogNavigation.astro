---
// 使用 starlightBlog API 获取博客数据
const { posts } = Astro.locals.starlightBlog;

// 获取当前页面路径
const currentPath = Astro.url.pathname;

// 按日期排序（从旧到新）
const sortedPosts = [...posts].sort((a, b) => {
  const dateA = new Date(a.createdAt).getTime();
  const dateB = new Date(b.createdAt).getTime();
  return dateA - dateB;
});

// 找到当前文章的索引
const currentPostIndex = sortedPosts.findIndex(post => {
  // 对比路径时，忽略URI末尾的斜杠差异
  const postHref = post.href.replace(/\/$/, '');
  const currentPathNormalized = currentPath.replace(/\/$/, '');
  return currentPathNormalized === postHref || currentPathNormalized.endsWith(postHref);
});

// 获取上一篇和下一篇文章
const prevPost = currentPostIndex > 0 ? sortedPosts[currentPostIndex - 1] : null;
const nextPost = currentPostIndex < sortedPosts.length - 1 ? sortedPosts[currentPostIndex + 1] : null;

// 调试输出
console.log('当前文章索引:', currentPostIndex);
console.log('所有文章数:', sortedPosts.length);
console.log('当前路径:', currentPath);
if (prevPost) console.log('上一篇:', prevPost.href);
if (nextPost) console.log('下一篇:', nextPost.href);
---

{(prevPost || nextPost) && (
  <div class="post-navigation">
    <div class="post-navigation-links">
      {prevPost && (
        <a href={prevPost.href} class="prev-post">
          <span class="nav-label">上一篇</span>
          <span class="post-title">{prevPost.title}</span>
        </a>
      )}
      
      {nextPost && (
        <a href={nextPost.href} class="next-post">
          <span class="nav-label">下一篇</span>
          <span class="post-title">{nextPost.title}</span>
        </a>
      )}
    </div>
  </div>
)}

<style>
  .post-navigation {
    margin-top: 3rem;
    border-top: 1px solid var(--sl-color-gray-5);
    padding-top: 1.5rem;
  }
  
  .post-navigation-links {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
  }
  
  .prev-post, .next-post {
    display: flex;
    flex-direction: column;
    max-width: 45%;
    text-decoration: none;
    padding: 1rem;
    border-radius: 0.5rem;
    background-color: var(--sl-color-gray-6);
    transition: background-color 0.2s ease;
  }
  
  .prev-post:hover, .next-post:hover {
    background-color: var(--sl-color-gray-5);
  }
  
  .nav-label {
    font-size: 0.875rem;
    color: var(--sl-color-gray-3);
    margin-bottom: 0.5rem;
  }
  
  .post-title {
    font-weight: 600;
    color: var(--sl-color-white);
  }
  
  .next-post {
    text-align: right;
    margin-left: auto;
  }
  
  @media (max-width: 50rem) {
    .post-navigation-links {
      flex-direction: column;
    }
    
    .prev-post, .next-post {
      max-width: 100%;
    }
  }
</style> 
